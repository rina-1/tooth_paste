<div class="container" style="margin:1vw 50px 0;">
    <div class="row">
        <div class="col-6 text-left">
                <%= flash[:notice] %>
        </div>
    </div>
    <div class="row">
        <div class="col-3 text-center">
            <h5 class="bg-info text-white rounded p-1 mt-5">おすすめ一覧</h5>
        </div>
    </div>
</div>
<% @recommends.each do |recommend| %>
<%= recommend.image %>
<%= recommend.genre_name %>
<%= recommend.tooth_paste_name %>
<%= recommend.comment %><br>
<%= link_to "編集", edit_admins_admin_recommend_path(recommend), class:"btn-sm btn-primary",style:"border-radius: 0.3em" %>
<%= link_to "削除", admins_admin_recommend_path(recommend), method: :delete, class:"btn btn-danger" %>
<% end %>