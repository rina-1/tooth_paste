<div class="container" style="margin:0 50px 0;">
    <div class="row">
        <div class="col-6 text-left">
                <%= flash[:notice] %>
        </div>
    </div>
    <div class="row">
        <div class="col-3 text-center">
            <h5 class="bg-info text-white rounded p-1 mt-5">おすすめ一覧</h5>
        </div>
    </div>
</div>

<div class="container">
<% @recommends.each do |recommend| %>
  <div class="row">
    <div class="col-2"><%= attachment_image_tag(recommend.paste, :image, size: '100x100') %></div>
    <div class="col-8 row">
      <div class="col-3"><%= recommend.paste.genre.genre_name %></div>
      <div class="col-7"><%= recommend.paste.tooth_paste_name %></div>
      <div class="col-2"><%= recommend.paste.price %>円</div>
      <div class="col-12">コメント:<%= recommend.comment %></div>
    </div>
    <div class="col-2 row">
      <div class="col-6"><%= link_to "編集", edit_admins_admin_recommend_path(recommend), class:"btn-sm btn-primary" %></div>
      <div class="col-6"><%= link_to "削除", admins_admin_recommend_path(recommend), method: :delete, class:"btn btn-danger" %></div>
    </div>
  </div>
<% end %>
<%= paginate @recommends %>
</div>