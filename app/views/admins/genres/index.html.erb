<div class="main-box">
    <div class="container" style="margin:0 50px 0;">
        <div class="row">
            <div class="col-6 text-left">
                    <%= flash[:notice] %>
            </div>
        </div>
        <div class="row">
            <div class="col-3 text-center">
                <h5 class="bg-info text-white rounded p-1 my-5">adminジャンル一覧・追加</h5>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <%= form_for(@genre,url:admins_genres_path) do |f| %>
                <%= f.label :genre_name, "ジャンル" %>
                <%= f.text_field :genre_name, autocomplete: "off" %>
                <%= f.submit "追加" %>
                <% end %>
            </div>
            <div class="col-6 row">
                <% @genres.each do |genre| %>
                <div class="col-6 my-1"><%= genre.genre_name %></div>
                <div class="col-6 my-1"><%= link_to "削除", admins_genre_path(genre), method: :delete, class:"btn btn-danger" %></div>
                <% end %>
            </div>
            <%= paginate @genres %>
        </div>
    </div>
</div>
