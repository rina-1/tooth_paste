


<div class="main-visual">
<div class="main-visual-content">
    <!-- pタグ（と文字）を追加 -->
    <p class="main-visual-text">
        The world is a book<br>
        and those who do not travel<br>
        read only one page.
    </p>
    </p>
    <p class="main-visual-name">
        St. Augustine
    </p>
</div>
</div>
    
    <div class="wrapper clearfix">
        <main class="main">
            <section>
                <div class="ranking">
                総合ランキング
                <table>
                <thead>
                    <tr>
                        <th>順位</th>
                        <th>歯磨き粉</th>
                        <th>お気に入りされた数</th>
                    </tr>
                </thead>
                <tbody>
                <% @user_favorites.each_with_index do |favorite, i| %>
                <p><%#= favorite[1].inspect %></p>
                <% if i < 3 %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= attachment_image_tag(favorite[1], :image, size: '100x100') %></td>
                        <td><%= favorite[0].first %></td>
                        <td><%= favorite[0].second %></td>
                        <td><%= link_to "詳しく見る", users_paste_path(favorite[1].id) %></td>
                    </tr>
                    <% end %>
                <% end %>
                </tbody>        
                </table>
                </div>
            </section>
            <section>
                <div class="ranking1">ジャンル別:ホワイトニングランキング
                <table>
                <thead>
                    <tr>
                        <th>順位</th>
                        <th>歯磨き粉</th>
                        <th>お気に入りされた数</th>
                    </tr>
                </thead>
                <tbody>
                <% @user_favorite_genre.each_with_index do |favorite, i| %>
                    <% if i < 3 %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= attachment_image_tag(favorite[1], :image, size: '100x100') %></td>
                        <td><%= favorite[0].first %></td>
                        <td><%= favorite[0].second %></td>
                        <td><%= link_to "詳しく見る", users_paste_path(favorite[1].id) %></td>
                    </tr>
                    <% end %>
                <% end %>
                </tbody>
                </table>
                </div>
            </section>
        </main>
        <div class="sidemenu">
        <section class="popular">
            <h4 class="sidebar-headline">運営者のおすすめ</h4>
            <div class="sidebar-contents">
                <p class="popular-text">ジャンルごと,ピックアップ</p>
                    <% @admin_recommends.each do |recommend| %>
                        <p><%= recommend.paste.genre.genre_name %></p>
                        <%= attachment_image_tag(recommend.paste, :image, size: '100x100') %>
                        <%= recommend.paste.tooth_paste_name %>
                        <%= recommend.comment %><br>
                        <%= link_to "詳しく見る", users_paste_path(recommend.paste_id) %>
                    <% end %>
            </div>
        </section>
        </div>
    </div>