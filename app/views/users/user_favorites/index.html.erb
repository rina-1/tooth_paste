


<div class="main-visual">
<div class="main-visual-content">
    <!-- pタグ（と文字）を追加 -->
    <p class="main-visual-text font-color-white">
        The world is a book<br>
        and those who do not travel<br>
        read only one page.
    </p>
    </p>
    <p class="main-visual-name">
        St. Augustine
    </p>
</div>
</div>
<div class="wrapper clearfix">
    <main class="main">
    <section class="container">
        <div class="row">
            <h4 class="col-12">総合ランキング</h4>
            <div class="col-12 row text-center">
                <% @user_favorites.each_with_index do |favorite, i| %>
                <% if i < 3 %>
                    <div class="col">
                        <div class="box_1">
                            <%= i + 1 %>位<br>
                            <%= attachment_image_tag(favorite[1], :image, size: '180x180') %><br>
                            <%= favorite[1].genre.genre_name %><br>
                            <%= favorite[0].first %><br>
                            <%= favorite[0].second %><br>
                            <%= link_to "詳しく見る", users_paste_path(favorite[1].id) %>
                        </div>
                    </div>
                <% end %>
                <% end %>
            </div>
        </div>
        <div class="row mt-3">
        <%= search_form_for(@q,url:users_user_favorites_path, method: :get, local:true) do |f| %>
            <h4 class="col-12 mt-2">
                <%= f.label :genre_name, "ジャンル別ランキング", class:"font-color-white" %>
            </h4>
        </div>
        <div class="row">
            <div class="col-5">
                <%= f.collection_select :genre_name_eq, @genres, :genre_name, :genre_name,{prompt: ""}, {class: 'form-control ransack-textbox-index'} %>
            </div>
            <div class="col-2 mt-1">
                <%= f.submit "検索" %>
            </div>
            <h5 class="col-5 text-right mt-1">
                <% if  @genre.present? %>
                    ジャンル:<%= @genre[0].genre_name %>
                <% end %>
            </h5>
        <% end %>
        <div class="col-12 row mt-4">
            <% @user_favorite_genre.each_with_index do |favorite, i| %>
                <% if i < 3 %>
                    <div class="col">
                        <div class="box_1">
                            <%= i + 1 %>位<br>
                            <%= attachment_image_tag(favorite[1], :image, size: '150x150') %><br>
                            <%= favorite[1].genre.genre_name %><br>
                            <%= favorite[0].first %><br>
                            <%= favorite[0].second %><br>
                            <%= link_to "詳しく見る", users_paste_path(favorite[1].id) %>
                        </div>
                    </div>
                <% end %>
            <% end %>
        </div>
        </div>
        <div class="row">
            <div class="col-12 text-right">
              <%= link_to "ランキング一覧を全部見る", users_pastes_path %>
           </div>
         </div>
    </section>
    </main>

    <div class="sidemenu">
    <section class="popular">
        <h4 class="sidebar-headline">運営者のおすすめ</h4>
        <div class="sidebar-contents">
            <%# <p class="popular-text">ジャンルごと,ピックアップ</p> %>
                <% @admin_recommends.each do |recommend| %>
                <div class="container">
                    <div class="row">
                        <div class="col-6">
                            <%= attachment_image_tag(recommend.paste, :image, size: '100x100') %></div>
                        <div class="col-6 row">
                                <%= recommend.paste.genre.genre_name %>
                            <div class="col-12">
                                <%= recommend.paste.tooth_paste_name %>
                            </div>
                            <div class="col-12">
                                <%= link_to "詳しく見る", users_paste_path(recommend.paste_id) %>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="admin_tag">
                                <%= recommend.comment %>
                            </div>
                         </div>     
                    </div>
                </div>
                <% end %>
                <% if @admin_recommends.present? %>
                <%= paginate @admin_recommends %>
                <% end %>
        </div>
    </section>
    </div>
</div>
