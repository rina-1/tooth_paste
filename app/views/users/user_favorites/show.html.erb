<div class="main-visual">
  <div class="main-visual-content">
      <!-- pタグ（と文字）を追加 -->
      <p class="main-visual-text font-color-white">
          <%= current_user.name %>さんの<br>
          お気に入り一覧表示<br>
          編集<br>

      </p>
      </p>
  </div>
</div>
<div class="flash_message">
  <%= flash[:success] %>
</div>
<% @user_favorites.each do |favorite| %>
  <div class="my_page_box" style="height: 300px;">
    <div class="container">
      <div class="row">
        <div class="col-12">
            製品名:<%= favorite.paste.tooth_paste_name %>
        </div>
        <div class="col-3 row">
          <div class="col-12">
            <%= attachment_image_tag(favorite.paste, :image, size: '180x180') %>
          </div>
        </div>
        <div class="col-9 row">
          <div class="col-11 offset-1">
            ジャンル:<%= favorite.paste.genre.genre_name %>
          </div>
          <div class="col-11 offset-1">
              値段:<%= favorite.paste.price %>円
          </div>
          <div class="col-11 offset-1">
              コメント内容:<%= favorite.comment %>
          </div>
          <div class="col-11 offset-1">
              <%= link_to "Edit", edit_users_user_favorite_path(favorite), class:"btn-flat-border font-color" %>
              <%= link_to "Delete", users_user_favorite_path(favorite), method: :delete, data: { confirm: "削除しますか？" }, class:"btn-flat-border font-color" %>
          </div>
        </div>
      </div>
    </div>
 </div>
<% end %>
<%= paginate @user_favorites %>



