<div class="container">
  <div class="row">
      <h2 class="col text-center" style="color: rgba(255, 253, 253, 0.7);">Log in</h2>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"login-form") do |f| %>
        <%= f.label :name, class:"font-color-white"%>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"login-username" %>
        <%= f.label :email, class:"font-color-white" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"login-username" %>
        <%= f.label :password, class:"font-color-white" %><br />
        <%= f.password_field :password, autocomplete: "current-password",class:"login-password" %>
        
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class:"font-color-white" %>
          </div>
        <% end %>

        <%= f.submit "Log in", class:"login-submit" %>
      <% end %>
    <%= render "devise/shared/links" %>
    </div>
    <div class="underlay-photo"></div>
    <div class="underlay-black"></div> 
    <div class="col-2"></div>
  </div>
</div>

